var a = 1, b = 1, c, d;
c = ++a; alert(c);           // 2 (префиксный инкремент на единицу увеличивает значение, т.е 1+1=2)
d = b++; alert(d);           // 1 (постфикснуму инркрименту будет присвоено текущее значение, т.е 1)
c = (2+ ++a); alert(c);      // 5 (префиксный инкремент еще увеличит значение на единицу, т.к. было 2 во втором действии еще + 1 = 3 и 2 + 3 = 5)
d = (2+ b++); alert(d);      // 4 (тк при еще одном сложении постфиксный инкемент увеличится на 1 и тогда получится 2 + 2 = 4)
alert(a);                    // 3 (результат с ранее выполненнымии командами)
alert(b);                    // 3 ( тут ток не совсем понимаю почему 3 то , а не 2)( или типа при вызове считается только в первом действии?он же по идее вызываается, но выполняется при повторном вызове?) 
