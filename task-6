   <script type="text/javascript">
        function mathOperation(arg1, arg2, operation){
    			switch(operation){
       				 case 'addition':
           				 return arg1 + arg2;
           				 break;
       				 case 'subtracton':
           				 return arg1 - arg2;
            			 break;
        			 case 'division':
                      	 return arg1 / arg2;
            			 break;
       				 case 'multiplication':
           				 return arg1 * arg2;
            			 break;
   				}
		}
    </script>
